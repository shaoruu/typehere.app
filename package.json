{
  "name": "typehere",
  "productName": "Type Here",
  "description": "A textarea with vim (and more).",
  "author": "Shaoru Ian Huang",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "dist-electron/main/index.js",
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:7777/"
    }
  },
  "build": {
    "appId": "com.typehere.app",
    "asar": true,
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist-electron",
      "dist"
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "icon": "icons/icon.icns",
      "target": [
        "zip"
      ],
      "notarize": false,
      "hardenedRuntime": false,
      "identity": null,
      "gatekeeperAssess": false
    }
  },
  "scripts": {
    "dev": "vite",
    "dev:electron": "vite --config electron-vite.config.ts",
    "build": "tsc && vite build",
    "build:electron": "tsc && vite build --config electron-vite.config.ts && electron-builder",
    "build:cli": "cd cli && go build -o th",
    "install:cli": "pnpm run build:cli && cp cli/th ~/.local/bin/th && chmod +x ~/.local/bin/th",
    "uninstall:cli": "node scripts/uninstall-cli.cjs",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "open": "open release/0.0.1/mac-arm64/",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md,json}": [
      "prettier --write"
    ]
  },
  "bin": {
    "th": "./dist-cli/th.js"
  },
  "dependencies": {
    "@seznam/compose-react-refs": "^1.0.6",
    "@vercel/analytics": "^1.2.2",
    "ace-builds": "^1.32.6",
    "crypto-js": "^4.2.0",
    "electron-store": "^9.0.0",
    "fuse.js": "^7.0.0",
    "is-electron": "^2.2.2",
    "lz-string": "^1.5.0",
    "react": "^18.2.0",
    "react-ace": "^10.1.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.1",
    "vite-plugin-replace": "^0.1.1"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "electron-updater": "^6.1.8",
    "esbuild": "^0.27.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "typescript": "^5.2.2",
    "vite": "^5.1.0",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-pwa": "^0.19.4"
  },
  "packageManager": "pnpm@10.9.0+sha512.0486e394640d3c1fb3c9d43d49cf92879ff74f8516959c235308f5a8f62e2e19528a65cdc2a3058f587cde71eba3d5b56327c8c33a97e4c4051ca48a10ca2d5f"
}
